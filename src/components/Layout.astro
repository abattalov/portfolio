---
import Header from './Header.astro';
import Footer from './Footer.astro';
import '../styles/global.css';

type Props = {
    title: string;
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
    </head>
    <body>
        <Header/>
        <main>
            <slot/>
        </main>
        <Footer/>
    </body>

</html>