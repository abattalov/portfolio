<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">Hi I'm <span class="accent-text">Alisher</span>!</h1>
        <h2 class="hero-subtitle">Fullstack developer specializing in modern web apps, browser extensions, and game development</h2>
        <a href="#projects" class="hero-cta">View My Projects</a>
    </div>
</section>

<style>
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--spacing-2xl) var(--spacing-md);
        padding-top: calc(var(--spacing-2xl) + 60px); /* Account for fixed header */
    }

    .hero-content {
        max-width: 800px;
        text-align: center;
    }

    .hero-title {
        margin-bottom: var(--spacing-md);
        animation: fadeInUp 0.6s ease-out;
    }

    .accent-text {
        color: var(--accent);
    }

    .hero-subtitle {
        color: var(--text-secondary);
        font-weight: 400;
        margin-bottom: var(--spacing-xl);
        animation: fadeInUp 0.6s ease-out 0.2s both;
    }

    .hero-cta {
        display: inline-block;
        padding: 0.875rem 2rem;
        background-color: var(--accent);
        color: white;
        font-weight: 500;
        border-radius: var(--radius-md);
        transition: all 0.2s ease;
        animation: fadeInUp 0.6s ease-out 0.4s both;
    }

    .hero-cta:hover {
        background-color: var(--accent-hover);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (min-width: 768px) {
        .hero {
            padding: var(--spacing-2xl) var(--spacing-lg);
        }
    }
</style>